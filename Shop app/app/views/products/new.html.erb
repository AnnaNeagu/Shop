
<!DOCTYPE html>
<html>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://kit.fontawesome.com/35eb3c981f.js" crossorigin="anonymous"></script>
<style>
.error_field {
 color: red;
}
</style>

<body style="background-color: #f3ead8">
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto topnav">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/products">Products</a>
        </li> 
        <li class="nav-item">
              <a href="/products/new"><i class="fa fa-plus fa-xl " ></i></a>
       </li>    
      </ul>           
         <a href="/baskets"> <i class="fa-solid fa-basket-shopping fa-xl " ></i></a>     
    </div>
  </div>
</nav>


<div class="position-absolute top-50 start-50 translate-middle" >

<h1 align="center"> New Product </h1>

<%= form_with model: @product do |form| %>
    <div class="mb-3">
        <%= form.label :name%><br>
        <%= form.text_field(:name, :class => "form-control" )%>
        <% @product.errors.full_messages_for(:name).each do |message| %>
            <div class="error_field"> <%= message %> </div>
        <% end %>
    </div>

     <div class="mb-3">
        <%= form.label :bar_code%> <br>
        <%= form.text_field(:bar_code, :class => "form-control" )%> 
        <% @product.errors.full_messages_for(:bar_code).each do |message| %>
            <div class="error_field"> <%= message %> </div>
        <% end %>
    </div> 

    <div class="mb-3">
        <%= form.label :price%> <br>
        <%= form.text_field(:price, :class => "form-control" )%> 
        <% @product.errors.full_messages_for(:price).each do |message| %>
            <div class="error_field"> <%= message %> </div>
        <% end %>
    </div>

    <div class="mb-3">
        <%= form.label :description%> <br>
        <%= form.text_area(:description, :class => "form-control")%> 
        
    </div>

    <div class="mb-3">
       
        <%= form.label :image%> <br>
        <%= form.file_field(:image, :class => "form-control" )%> 
        <% @product.errors.full_messages_for(:image).each do |message| %>
            <div class="error_field"> <%= message %> </div>
        <% end %>
    </div>

    <div class="form-group" align="center">
        <%= form.submit(:class => "btn btn-dark")%>
    </div>
<% end %>   

</body>
</html>