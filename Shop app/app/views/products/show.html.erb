<%= stylesheet_link_tag "style"%>
<body style="background: -webkit-linear-gradient(left, #52b788, #d8f3dc);">
   <div class= "container" >
      <h1 class="display-1" style="text-align:center;">Fresh products </h1>
      <div class="container" style="margin-top:100px;">
         <div class="row ">
            <div class="col-sm-6">
            <% if @product.image.attached?%>
                <%= image_tag(@product.image, :class => "img-fluid")%>
                 <%else %>
                  <%= image_tag "fresh.jpg", :class => "img-fluid" %>

                  <% end %>
            </div>
            <div class="col-sm-6">
               <div class="row justify-content-md-center">
                  <div class="col-md-4 ">
                     <h2><%= @product.name %> </h2>
                  </div>
               </div>
               <div class="row justify-content-md-center">
                  <div class="col-md-4 ">
                     <p> <%= @product.description %>   </p>
                  </div>
               </div>
               
                     <h5>Price</h5>
                     <%= @product.price %> RON / KG 
              
                     <h4 style="margin-top:20px;">Quantity</h4>
                      <div class="col-sm-3">
                        <%= form_for @order_item do |a|%>
                        <%= a.hidden_field :product_id, :value =>  @product.id %>
                        <%= a.number_field :quantity, :value =>1, :min => 1, class:"form-control" %> <br />
                        <%= a.submit("Add to basket", :class => "btn btn-dark")%>  
                     </div>
                
                
               <% end %> 
            </div>
         </div>
      </div>
   </div>
   </div>
   </div>