   <body style="background: -webkit-linear-gradient(left, #52b788, #d8f3dc);">
      <div class="topnav">
         <a href="/products" >Products</a>
         <a href="/products/new"><i class="fa fa-plus fa-xl "></i></a>
         <a href="/baskets" style="float: right;" ><i class="fa-solid fa-basket-shopping fa-xl" ></i></a>
         <a href="javascript:void(0);" class="icon" onclick="myFunction()">
         <i class="fa fa-bars"></i>
         </a>
      </div>
      <div class="card">
         <div class="row">
            <div class="col-md-8 cart">
               <div class="title">
                  <div class="row">
                     <div class="col">
                        <h4><b>Basket</b></h4>
                     </div>
                  </div>
               </div>
               <% @order_items.each do |item| %>
               <div class="row border-top border-bottom">
                  <div class="row main align-items-center ">
                     <div class="col-2">
                        <% if item.product.image.attached?%>
                        <%= image_tag(item.product.image, :class => "card-img-top")%>
                        <% end %>
                     </div>
                     <div class="col">
                        <div class="row text-muted">
                           <h3><%= item.product.name %></h3>
                           <h5><%= item.product.price %> RON/KG</h5>
                        </div>
                     </div>
                     <div class="col" style="margin-top: 40px;">
                        <%= form_for item do |a|%>
                        <%= a.hidden_field :product_id, :value =>  item.product.id %>
                        <%= a.number_field :quantity, :value => item.quantity , class:"form-control"%> 
                     </div>
                     <div class="col ">
                        <%= a.submit("Update", :class => "btn btn-dark")%>    
                        <% end %> 
                     </div>
                     <div class="col">
                        <h3> <%= item.total%> RON </h3>
                     </div>
                     <div class="col" style="margin-bottom: 40px;">
                        <%= button_to "Delete", order_item_path(item), method: :delete, class: "btn btn-outline-dark"  %>
                     </div>
                  </div>
               </div>
               <% end %>
               <div class="back-to-shop"><a href="/products">&leftarrow;</a><span class="text-muted">Back to shop</span></div>
            </div>
            <div class="col-md-4 summary">
               <div>
                  <p> 
                  <h5><b>ORDER</b></h5>
                  ( <b><%= current_order.order_items.size%> Items</b>) </p>
               </div>
               <hr>
               <div class="row">
                  <%# <div class="col text-right"><%=current_order.subtotal %> 
                  <%# <div id="basket">
                     <%=  render 'baskets/basket'%>
                  <%# </div>  %>
                  <div class="col text-right">
                     <p> <b>TOTAL PRICE:  <%=current_order.subtotal %> RON </b> </p>
                  </div>
               </div>
               <div class="col " style="border: 1px solid black">
                  <p>DISCOUNT CODE</p>
                  <input  id="voucher-input" placeholder="Enter the discount code">
                  <button onclick="apply_discount(document.getElementById('voucher-input').value)" type="button" class="btn">Apply</button>
               </div>
               <div class="row" style="border-top: 1px solid rgba(0,0,0,.1); padding: 2vh 0;">
                  <% if @discount %>
                  <%# <div class="container" style="display: flex;justify-content: center;"> %>
                  <div class="col text-right">
                     <p>DISCOUNT: <%= (@discount * 100).round(0) %> %</p>
                  </div>
                  <div class="col text-right">
                     <p>FINAL PRICE:
                        <% cut = @discount * current_order.subtotal %>
                        <% final_price = current_order.subtotal - cut %>
                        <b><%= number_with_delimiter(final_price.round(2), :delimiter => ',') %> RON
                     </p>
                     </b>
                  </div>
                  <% end %>
               </div>
               <button class="btn">CHECKOUT</button>
            </div>
         </div>
      </div>
