<h1>Basket</h1>



<% @order_items.each do |item| %>
    <h3><%= item.product.name %></h3>
    <h3><%= item.product.price %></h3>

    <%= form_for item do |f|%>
    <%= f.hidden_field :product_id, :value => item.product.id %>
    <%= f.number_field :quantity, :value => item.quantity.to_i %>
    <%= f.submit "Update "%>

    <%= link_to "Remove ", order_item_path(item), method: :delete, remote: true %>
    <% end %>

    <h2>Subtotal: <%= item.total%> </h2>

<% end %>

<h3> Your current value has a total of: <%=current_order.subtotal %> RON </h3>