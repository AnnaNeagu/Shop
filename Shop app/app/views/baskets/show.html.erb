   <body style="background: -webkit-linear-gradient(left, #52b788, #d8f3dc);">
      <div class="topnav">
         <a href="/products" >Products</a>
         <a href="/products/new"><i class="fa fa-plus fa-xl "></i></a>
         <a href="/baskets" style="float: right;" ><i class="fa-solid fa-basket-shopping fa-xl" ></i></a>
         <a href="javascript:void(0);" class="icon" onclick="myFunction()">
         <i class="fa fa-bars"></i>
         </a>
      </div>
      <div class="card">
         <div class="row">
            <div class="col-md-8 cart">
               <div class="title">
                  <div class="row">
                     <div class="col">
                        <h4><b>Basket</b></h4>
                     </div>
                     <div class="col align-self-center text-right text-muted">3 items</div>
                  </div>
               </div>
               <% @order_items.each do |item| %>
               <div class="row border-top border-bottom">
                  <div class="row main align-items-center">
                     <div class="col-2">
                        <% if item.product.image.attached?%>
                        <%= image_tag(item.product.image, :class => "card-img-top")%>
                        <% end %>
                     </div>
                     <div class="col">
                        <div class="row text-muted">
                           <h3><%= item.product.name %></h3>
                            <h5><%= item.product.price %> RON/KG</h5>
                        </div>
                        <%# <div class="row">Cotton T-shirt</div> %>
                     </div>
                     <div class="col">
                        <%# <a href="#">-</a> %>
                         <%= button_to "-", order_items_url(item), method: :update, class: "btn btn-dark btn-circle btn-s"  %>
                         </div>
                         <div class="col">
                        <%# <a href="#" class="border"> %>
                           <h3><%= item.quantity.to_i %></h3>
                        </a>
                        </div>
                        <div class="col">
                        <%= button_to "+", order_items_url(item), method: :update, class: "btn btn-dark btn-circle btn-s"  %>
                        
                     </div>
                     <div class="col">
                       <h3> <%= item.total%> RON </h3>
                      
                     </div>
                     <div class="col">
                     <%= button_to "Delete", order_item_path(item), method: :delete, class: "btn btn-outline-dark"  %>
                        <%# <span class="close">&#10005;</span> %>
                     </div>
                  </div>
               </div>
